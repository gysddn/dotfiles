interval = 100

;HOW TO SET IT MINIMAL 10 CHARACTERS - HIDDEN BEHIND SYSTEM ICONS
;label = %output%
label = %output:10%

format-foreground = ${<colors.foreground}
format-background = ${colors.background2}
format-prefix = "  "
format-prefix-foreground = #62FF00
format-underline = #62FF00

